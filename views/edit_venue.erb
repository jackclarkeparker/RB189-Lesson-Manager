<main>
  <h1>Edit Venue Details</h1>
  
  <form action="/venues/<%= @original.id %>/edit" method="post">
    <dl class="label-input-pairs">
      <dt><label for="name">Venue Name:</label></dt>
      <dd>
        <input type="text" id="name" name="name" autocomplete="off"
            value="<%== params[:name] || @original %>"/>
      </dd>
      <dt><label for="address">Address:</label></dt>
      <dd>
        <input type="text" id="address" name="address" autocomplete="off"
            value="<%= params[:address] || @original.address %>"/>
      </dd>
    </dl>
    <input type="submit" value="Update Venue"/>
    <input type="submit" formaction="/venues/<%= @original.id %>/destroy" formmethod="get" value="Drop Venue"/>
  </form>
  <a class="back-link" href="<%= session[:return_path] %>">Back</a>
</main>