<main>
  <h1>Add Student</h1>
  <form action="/lessons/<%= @lesson.id %>/students/new" method="post">
    <dl class="label-input-pairs">
      <dt><label for="name">Student Name:</label></dt>
      <dd>
        <input type="text" id="name" name="name"
            autocomplete="off" value="<%= params[:name] %>" required/>
      </dd>
      <dt><label for="age">Age:</label></dt>
      <dd>
        <input type="number" id="age" name="age"
            min="4" max="99" value="<%= params[:age] %>" required/>
      </dd>
    </dl>
    <input type="submit" value="Add Student"/>
  </form>
  <a class="back-link" href=<%= session[:student_roster_return_path] %>>Back</a>
</main>