<main>
  <h1>Edit Student Details</h1>
  <form action="/lessons/<%= @lesson.id %>/students/<%= @original.id %>/edit" method="post">
    <dl class="label-input-pairs">
      <dt><label for="name">Student Name:</label></dt>
      <dd>
        <input type="text" id="name" name="name" autocomplete="off"
            value="<%= params[:name] || @original.name %>" required/>
      </dd>
      <dt><label for="age">Age:</label></dt>
      <dd>
        <input type="number" id="age" name="age" min="4" max="99"
            value="<%= params[:age] || @original.age %>" required/>
      </dd>
    </dl>
    <input type="submit" value="Update Details"/>
    <input type="submit" formaction="/lessons/<%= @lesson.id %>/students/<%= @original.id %>/destroy"
        formmethod="get" value="Terminate Student"/>
  </form>
  <a class="back-link" href=<%= session[:student_roster_return_path] %>>Back</a>
</main>